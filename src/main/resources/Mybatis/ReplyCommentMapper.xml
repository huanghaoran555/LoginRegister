<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zking.repository.ReplyCommentMapper">
    <resultMap id="ReplyCommentWithUser" type="com.zking.entity.ReplyComment">
        <id column="id" property="id"/>
        <result column="videoId" property="videoId"/>
        <result column="commentId" property="commentId"/>
        <result column="replyUserId" property="replyUserId"/>
        <result column="repliedUserId" property="repliedUserId"/>
        <result column="content" property="content"/>
        <result column="createTime" property="createTime"/>
        <association property="user" javaType="com.zking.entity.UserEntity">
            <id property="id" column="user_id"/>
            <result property="username" column="username"/>
        </association>
    </resultMap>
    <insert id="addReplyCommentMapper" parameterType="com.zking.entity.ReplyComment" useGeneratedKeys="true" keyProperty="id">
        insert into ReplyComment(videoId,commentId,replyUserId,repliedUserId,content)
        values(#{videoId},#{commentId},#{replyUserId},#{repliedUserId},#{content})
    </insert>
    <select id="getReplyCommentsByCommentId" parameterType="java.lang.Integer" resultMap="ReplyCommentWithUser">
        select R.id,R.videoId,R.commentId,R.replyUserId,R.repliedUserId,R.content,R.createTime,
               U.id as user_id,U.username from ReplyComment R
                                                           left join user U on R.replyUserId=U.id
        where R.commentId=#{id}
    </select>
</mapper>